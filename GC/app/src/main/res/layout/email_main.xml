<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".email_Activity">


    <RelativeLayout android:id="@+id/page_login_ek1"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <View   android:id="@+id/_bg__home_page_ek2"
        android:background="@drawable/_bg__home_page_ek2_shape"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="411dp"
        android:layout_height="731dp"
        tools:ignore="MissingConstraints" />

        <ImageView android:id="@+id/pngtree_keep_our_city_clean_png_png_image_6099580_1"
            android:src="@drawable/pngtree_keep_our_city_clean_png_png_image_6099580_1"
            android:layout_marginStart="100dp"
            android:layout_marginTop="80dp"
            android:layout_width="154dp"
            android:layout_height="154dp" />

    <TextView android:id="@+id/entermail"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginStart="020dp"
        android:layout_marginTop="267dp"
        android:layout_width="350dp"
        android:layout_height="63dp"
        android:text="Enter the Register Email Address"
        />


        <TextView android:id="@+id/emailtext"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="340dp"
            android:gravity="center"
            android:layout_width="800dp"
            android:layout_height="63dp"
            android:text="we will email you a like to reset
                                   your password"
            />


        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="274dp"
            android:layout_height="45dp"
            android:layout_marginTop="394dp"
            android:layout_marginStart="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />


        <Button android:id="@+id/sendButton"
            android:textSize="24sp"
            android:textColor="@color/login_now_color"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="470dp"
            android:layout_width="137dp"
            android:layout_height="58dp"
            android:text="send"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>