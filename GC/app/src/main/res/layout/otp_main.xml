<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otp_Activity">


    <RelativeLayout android:id="@+id/page_login_ek1"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


    <View   android:id="@+id/_bg__home_page_ek2"
        android:background="@drawable/_bg__home_page_ek2_shape"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="411dp"
        android:layout_height="731dp"
        tools:ignore="MissingConstraints" />


        <ImageView android:id="@+id/pngtree_keep_our_city_clean_png_png_image_6099580_1"
            android:src="@drawable/pngtree_keep_our_city_clean_png_png_image_6099580_1"
            android:layout_marginStart="100dp"
            android:layout_marginTop="80dp"
            android:layout_width="154dp"
            android:layout_height="154dp" />



    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="320dp"
        android:text="Email OTP Verification"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/otpEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="400dp"
        android:hint="Enter OTP"
        android:inputType="number"
        android:textSize="18sp" />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="480dp"
        android:text="Verify OTP"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>